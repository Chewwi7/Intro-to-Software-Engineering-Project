@startuml
entity User{
* userID: PK int, identity
--
* userName: varchar 255
--
*Email: varchar 255
--
*Password: varchar 255
}

entity Sales{
* salesID: PK int, identity
--
* userID: FK int
--
* inventoryID: FK int
--
* userName: varchar 255
--
* inventoryName: varchar 255 
--
* inventoryPrice: decimal
--
* date: varchar 255

}

entity Inventory{
* inventoryID: PK int, identity
--
* inventoryName: varchar 255
--
* inventoryDescription: varchar 255
--
* inventoryPrice: decimal
}

User||--{Sales
Inventory ||--O| Sales

@enduml
