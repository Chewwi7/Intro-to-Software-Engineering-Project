    <p asp-for="InventoryPrice">$@Html.DisplayFor(modelItem => item.InventoryPrice)</p>
    <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>
}
