@page
@model WebApp.Views.Auth.LoginRegistrationModel

<!DOCTYPE html>
<div class="text-center">
    <h1 class="display-4">Welcome to LootX</h1>
    <h2>Please Login or Register</h2>
    <form method="post" asp-page-handler="Register" style="background: white; padding: 80px; max-width: 500px; border-radius: 75px; text-align: center; margin-left: auto; margin-right: auto;">
        <div class="form-group">
            <label for="exampleInputEmail1" class="form-label mt-4">Username</label>
            <input type="text" name="username" class="form-control" id="exampleInputEmail1" placeholder="Username">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
            <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password" autocomplete="off">
        </div>
        <div class="registerButton">
            <button type="submit" class="btn btn-outline-primary">Register</button>
        </div>
    </form>
    
    <form method="post" asp-page-handler="Login" style="background: white; padding: 80px; max-width: 500px; border-radius: 75px; text-align: center; margin-left: auto; margin-right: auto;">
        <div class="form-group">
            <label for="exampleInputEmail2" class="form-label mt-4">Username</label>
            <input type="text" name="username" class="form-control" id="exampleInputEmail2" placeholder="Username">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword2" class="form-label mt-4">Password</label>
            <input type="password" name="password" class="form-control" id="exampleInputPassword2" placeholder="Password" autocomplete="off">
        </div>
        <div class="loginButton">
            <button type="submit" class="btn btn-outline-primary">Sign In</button>
        </div>
    </form>
</div>